//OUVRIR UNE FENETRE//

#include <unistd.h>
#include <mlx.h>

int main (int ac, char **av)
{
    void *mlx;
    void *win;

    mlx = mlx_init();
    win = mlx_new_window(mlx, 420, 420, "42");
    sleep(5);
    return(0);
}

//DESSINER UN RECTANGLE PLEIN//
int main (int ac, char **av)
{
   void *mlx;
   void *win;
   int x;
   int y;

   mlx = mlx_init();
   win = mlx_new_window(mlx, 420, 420, "42");
   sleep(2);
   y = 100;
   while (y < 200)
   {
       x = 100;
       while (x < 200)
       {
           mlx_pixel_put(mlx, win, x, y, 0xFF0000);
           usleep(500);
           x++;
       }
       y++;
   }
   sleep(5);
   return(0);
}


//BRESENHAM\\

void line(int x0, int y0, int x1, int y1)
{
  int dx = abs(x1 - x0);
  int sx = x0 <x 1 ? 1 : -1;
  int dy = abs(y1 - y0);
  int sy = y0 < y1 ? 1 : -1;
  int err = (dx > dy ? dx : -dy) /2, e2;

  for(;;)
  {
    setPixel(x0,y0);
    if (x0 == x1 && y0 == y1)
		break;
    e2 = err;
    if (e2 > -dx)
		err -= dy;
		x0 += sx;
    if (e2 < dy)
		err += dx;
		y0 += sy;
  }
}

//COMPILER//
gcc test.c -o test -L/usr/X11/lib -lmlx -lXext -lx11
